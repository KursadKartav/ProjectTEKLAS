@model ProjeTeklas.Models.OgretmenSinif

@{
    ViewData["Title"] = "Create";
}

<h4>Öğretmen ve Sınıf Seçimi</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SinifId" class="control-label">Sınıf Seçiniz</label>
                <select asp-for="SinifId" class ="form-control" asp-items="ViewBag.SinifId"></select>
            </div>
            <div class="form-group">
                <label asp-for="OgretmenId" class="control-label">Öğretmen Seçiniz</label>
                <select asp-for="OgretmenId" class ="form-control" asp-items="ViewBag.OgretmenId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
