@model ProjeTeklas.Models.Sinif

@{
    ViewData["Title"] = "Edit";
}

<h4>Sinif Bilgileri</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SinifId" />
            <div class="form-group">
                <label asp-for="SinifAdi" class="control-label">Sınıf Adı</label>
                <input asp-for="SinifAdi" class="form-control" />
                <span asp-validation-for="SinifAdi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
